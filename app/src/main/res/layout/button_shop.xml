<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/button_shop_layout"
              android:layout_width="match_parent"
              android:layout_height="@dimen/components_height_main"
              android:background="@drawable/drawable_corner"
              android:layout_margin="@dimen/margin_top_main_buttons"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/text_purchase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:clickable="true"
        android:gravity="center"
        />

    <Button
        android:id="@+id/buy_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:text="$"
        android:textColor="@color/green1"
        android:visibility="gone"/>
</LinearLayout>