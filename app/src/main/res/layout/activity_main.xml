<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorMainLayout"
                tools:context="com.samuelberrien.odyspace.main.MainActivity">

    <LinearLayout
        android:id="@+id/linear_layout_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_separator_main"
        android:background="@drawable/drawable_corner"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ship_image_main"
                android:layout_width="@dimen/size_image_main"
                android:layout_height="@dimen/size_image_main"
                android:background="@drawable/transition_button_main"
                android:layout_marginEnd="@dimen/margin_top_main_buttons"
                android:padding="@dimen/padding_main"/>

            <ImageView
                android:id="@+id/fire_image_main"
                android:layout_width="@dimen/size_image_main"
                android:layout_height="@dimen/size_image_main"
                android:background="@drawable/transition_button_main"
                android:padding="@dimen/padding_main"
                android:layout_marginEnd="@dimen/margin_top_main_buttons"/>

            <ImageView
                android:id="@+id/bonus_image_main"
                android:layout_width="@dimen/size_image_main"
                android:layout_height="@dimen/size_image_main"
                android:background="@drawable/transition_button_main"
                android:padding="@dimen/padding_main"/>

        </LinearLayout>

        <TextView
            android:id="@+id/curr_money_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_top_main_buttons"/>

        <Button
            android:id="@+id/shop_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/components_height_main"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_top_main_buttons"
            android:layout_weight="0.75"
            android:background="@drawable/transition_button_main"
            android:onClick="shop"
            android:text="Shop"
            android:textSize="@dimen/main_text_size"/>
    </LinearLayout>


    <Button
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/components_height_main"
        android:layout_alignEnd="@+id/linear_layout_image"
        android:layout_alignStart="@+id/linear_layout_image"
        android:layout_below="@+id/linear_layout_image"
        android:layout_marginTop="@dimen/margin_top_main_buttons"
        android:background="@drawable/transition_button_main"
        android:onClick="continueStory"
        android:text="Continue Story"
        android:textSize="@dimen/main_text_size"/>


    <ScrollView
        android:id="@+id/level_chooser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/continue_button"
        android:layout_marginTop="@dimen/margin_separator_main"
        android:background="@drawable/drawable_shop"
        android:fadingEdgeLength="30dp"
        android:paddingBottom="@dimen/strokes_width"
        android:paddingTop="@dimen/strokes_width"
        android:requiresFadingEdge="vertical">

        <LinearLayout
            android:id="@+id/level_chooser_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_main"/>
    </ScrollView>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/strokes_width"
        android:background="@drawable/transition_button_main"
        android:onClick="reset"
        android:text="â˜ "/>

</RelativeLayout>
