<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorMainLayout"
                tools:context="com.samuelberrien.odyspace.main.MainActivity">

    <TextView
        android:id="@+id/curr_money_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fire_image_main"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/padding_top_text_main"/>

    <Button
        android:id="@+id/start_button"
        android:layout_width="@dimen/components_width_main"
        android:layout_height="@dimen/components_height_main"
        android:layout_below="@id/curr_money_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_main_buttons"
        android:background="@drawable/button_main"
        android:onClick="start"
        android:text="Start"/>

    <ImageView
        android:id="@+id/fire_image_main"
        android:layout_width="@dimen/components_height_main"
        android:layout_height="@dimen/components_height_main"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_separator_main"
        android:background="@drawable/button_main"
        android:padding="@dimen/padding_main"/>

    <ImageView
        android:id="@+id/bonus_image_main"
        android:layout_width="@dimen/components_height_main"
        android:layout_height="@dimen/components_height_main"
        android:layout_alignEnd="@id/start_button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_separator_main"
        android:background="@drawable/button_main"
        android:padding="@dimen/padding_main"/>

    <ImageView
        android:id="@+id/ship_image_main"
        android:layout_width="@dimen/components_height_main"
        android:layout_height="@dimen/components_height_main"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/start_button"
        android:layout_marginTop="@dimen/margin_separator_main"
        android:background="@drawable/button_main"
        android:padding="@dimen/padding_main"/>

    <Button
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/components_height_main"
        android:layout_alignEnd="@+id/start_button"
        android:layout_alignStart="@+id/start_button"
        android:layout_below="@+id/start_button"
        android:layout_marginTop="@dimen/margin_top_main_buttons"
        android:background="@drawable/button_main"
        android:onClick="continueStory"
        android:text="Continue Story"/>

    <Button
        android:id="@+id/shop_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/components_height_main"
        android:layout_alignEnd="@+id/continue_button"
        android:layout_alignStart="@+id/continue_button"
        android:layout_below="@+id/continue_button"
        android:layout_marginTop="@dimen/margin_top_main_buttons"
        android:background="@drawable/button_main"
        android:onClick="shop"
        android:text="Shop"/>

    <ScrollView
        android:id="@+id/level_chooser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/shop_button"
        android:layout_marginTop="@dimen/margin_separator_main"
        android:background="@drawable/drawable_shop"
        android:paddingBottom="@dimen/strokes_width"
        android:paddingTop="@dimen/strokes_width">

        <LinearLayout
            android:id="@+id/level_chooser_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_main"/>
    </ScrollView>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_reset_skull"
        android:onClick="reset"
        android:layout_margin="@dimen/strokes_width"/>

</RelativeLayout>
