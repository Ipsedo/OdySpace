<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainLayout"
    tools:context="com.samuelberrien.odyspace.MainActivity">

    <Button
        android:id="@+id/start_button"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/game_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_main"
        android:onClick="start"
        android:text="Start"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="233dp" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/start_button"
        android:layout_alignLeft="@+id/start_button"
        android:layout_alignRight="@+id/start_button"
        android:layout_alignStart="@+id/start_button"
        android:layout_below="@+id/start_button"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_main"
        android:onClick="continueStory"
        android:text="Continue Story" />

    <Button
        android:id="@+id/shop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/continue_button"
        android:layout_alignLeft="@+id/continue_button"
        android:layout_alignRight="@+id/continue_button"
        android:layout_alignStart="@+id/continue_button"
        android:layout_below="@+id/continue_button"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_main"
        android:onClick="shop"
        android:text="Shop" />

    <TextView
        android:id="@+id/game_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/start_button"
        android:layout_alignLeft="@+id/start_button"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/start_button"
        android:layout_alignStart="@+id/start_button"
        android:layout_marginTop="37dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="false" />

    <ScrollView
        android:id="@+id/level_chooser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/shop_button"
        android:layout_marginTop="35dp"
        android:background="@drawable/drawable_shop">

        <LinearLayout
            android:id="@+id/level_chooser_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"></LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/button_reset_skull"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="reset"/>

</RelativeLayout>
