<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.samuelberrien.odyspace.MainActivity">

    <Button
        android:id="@+id/start_button"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Start"
        android:onClick="start"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="233dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/start_button"
        android:layout_alignLeft="@+id/start_button"
        android:layout_alignRight="@+id/start_button"
        android:layout_alignStart="@+id/start_button"
        android:layout_below="@+id/start_button"
        android:layout_marginTop="24dp"
        android:text="Continue"
        android:onClick="continueStory"/>

    <Button
        android:id="@+id/shop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/continue_button"
        android:layout_alignLeft="@+id/continue_button"
        android:layout_alignRight="@+id/continue_button"
        android:layout_alignStart="@+id/continue_button"
        android:layout_below="@+id/continue_button"
        android:layout_marginTop="24dp"
        android:text="Shop"
        android:onClick="shop"/>

</RelativeLayout>
